{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "containerGroupName": {
      "type": "string",
      "defaultValue": "[concat('clawdbot-', uniqueString(resourceGroup().id))]",
      "metadata": {
        "description": "Name for the container group"
      }
    },
    "dnsNameLabel": {
      "type": "string",
      "defaultValue": "[concat('clawdbot-', uniqueString(resourceGroup().id))]",
      "metadata": {
        "description": "DNS name label for the container group"
      }
    },
    "containerImage": {
      "type": "string",
      "defaultValue": "ghcr.io/roccoren/clawdbot-az-aci:latest",
      "metadata": {
        "description": "Container image to deploy. Default uses the pre-built image from this repository."
      }
    },
    "registryServer": {
      "type": "string",
      "defaultValue": "ghcr.io",
      "metadata": {
        "description": "Container registry server (used when registry credentials are provided)"
      }
    },
    "registryUsername": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Container registry username (optional for public images)"
      }
    },
    "registryPassword": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "Container registry password or token (optional for public images)"
      }
    },
    "containerCpu": {
      "type": "int",
      "defaultValue": 1,
      "allowedValues": [
        1,
        2,
        4
      ],
      "metadata": {
        "description": "Number of CPU cores for the container"
      }
    },
    "containerMemory": {
      "type": "int",
      "defaultValue": 2,
      "metadata": {
        "description": "Amount of memory in GB for the container"
      }
    },
    "openAiApiKey": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "OpenAI API Key (optional, but at least one AI provider key required)"
      }
    },
    "anthropicApiKey": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "Anthropic API Key (optional, but at least one AI provider key required)"
      }
    },
    "clawdbotGatewayToken": {
      "type": "securestring",
      "defaultValue": "[concat(uniqueString(resourceGroup().id, utcNow()), uniqueString(subscription().subscriptionId, utcNow()), uniqueString(deployment().name, utcNow()))]",
      "metadata": {
        "description": "Gateway token for Clawdbot authentication. IMPORTANT: Write this down before deploying! If left empty, a random token is generated (39 chars)."
      }
    },
    "logAnalyticsWorkspaceName": {
      "type": "string",
      "defaultValue": "[concat('law-', uniqueString(resourceGroup().id))]",
      "metadata": {
        "description": "Name of the Log Analytics workspace"
      }
    }
  },
  "variables": {
    "containerPort": 18789,
    "imageRegistryCredentials": "[if(and(not(empty(parameters('registryUsername'))), not(empty(parameters('registryPassword')))), createArray(createObject('server', parameters('registryServer'), 'username', parameters('registryUsername'), 'password', parameters('registryPassword'))), json('[]'))]"
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2022-10-01",
      "name": "[parameters('logAnalyticsWorkspaceName')]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": {
          "name": "PerGB2018"
        },
        "retentionInDays": 30
      }
    },
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2023-05-01",
      "name": "[parameters('containerGroupName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('logAnalyticsWorkspaceName'))]"
      ],
      "properties": {
        "containers": [
          {
            "name": "clawdbot",
            "properties": {
              "image": "[parameters('containerImage')]",
              "ports": [
                {
                  "port": "[variables('containerPort')]",
                  "protocol": "TCP"
                }
              ],
              "environmentVariables": [
                {
                  "name": "OPENAI_API_KEY",
                  "secureValue": "[parameters('openAiApiKey')]"
                },
                {
                  "name": "ANTHROPIC_API_KEY",
                  "secureValue": "[parameters('anthropicApiKey')]"
                },
                {
                  "name": "CLAWDBOT_GATEWAY_TOKEN",
                  "secureValue": "[parameters('clawdbotGatewayToken')]"
                },
                {
                  "name": "NODE_ENV",
                  "value": "production"
                }
              ],
              "resources": {
                "requests": {
                  "cpu": "[parameters('containerCpu')]",
                  "memoryInGB": "[parameters('containerMemory')]"
                }
              }
            }
          }
        ],
        "osType": "Linux",
        "restartPolicy": "Always",
        "ipAddress": {
          "type": "Public",
          "dnsNameLabel": "[parameters('dnsNameLabel')]",
          "ports": [
            {
              "port": "[variables('containerPort')]",
              "protocol": "TCP"
            }
          ]
        },
        "imageRegistryCredentials": "[variables('imageRegistryCredentials')]",
        "diagnostics": {
          "logAnalytics": {
            "workspaceId": "[reference(resourceId('Microsoft.OperationalInsights/workspaces', parameters('logAnalyticsWorkspaceName')), '2022-10-01').customerId]",
            "workspaceKey": "[listKeys(resourceId('Microsoft.OperationalInsights/workspaces', parameters('logAnalyticsWorkspaceName')), '2022-10-01').primarySharedKey]"
          }
        }
      }
    }
  ],
  "outputs": {
    "containerGroupId": {
      "type": "string",
      "value": "[resourceId('Microsoft.ContainerInstance/containerGroups', parameters('containerGroupName'))]"
    },
    "containerGroupName": {
      "type": "string",
      "value": "[parameters('containerGroupName')]"
    },
    "clawdbotUrl": {
      "type": "string",
      "value": "[concat('http://', reference(resourceId('Microsoft.ContainerInstance/containerGroups', parameters('containerGroupName'))).ipAddress.fqdn, ':', variables('containerPort'))]"
    },
    "clawdbotFqdn": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups', parameters('containerGroupName'))).ipAddress.fqdn]"
    },
    "gatewayTokenNote": {
      "type": "string",
      "value": "Gateway token was provided as a parameter. If auto-generated, retrieve it from Key Vault or redeploy with a known token.",
      "metadata": {
        "description": "Security note about gateway token"
      }
    }
  }
}
